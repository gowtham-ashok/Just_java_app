<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textviewone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    android:backgroundTint="#F8F8F7"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/TextViewpadding"
        android:paddingStart="@dimen/TextViewpadding"
        android:paddingEnd="@dimen/TextViewpadding"
        android:text="@string/QuantityTextView"
        android:textAllCaps="true"
        android:textColor="#2196F3"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/increment_button"
            style="@style/ButtonStyle"
            android:onClick="increment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/TextViewpadding"
            android:text="@string/numberChange"
            android:textColor="#7C7C7C"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/textSizeadd" />

        <Button
            android:id="@+id/decrement_button"
            style="@style/ButtonStyle"
            android:onClick="decrement"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-" />

    </LinearLayout>


    <TextView
        android:id="@+id/text_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/TextViewpadding"
        android:text="PRICE"
        android:textColor="#2196F3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/TextViewpadding"
        android:paddingStart="@dimen/TextViewpadding"
        android:paddingEnd="@dimen/TextViewpadding"
        android:text="$0"
        android:textColor="#7C7C7C"
        android:textSize="@dimen/textSizeadd" />

    <Button
        android:id="@+id/order_button"
        android:text="Button"
        android:onClick="submitOrder"
        style="@style/ButtonStyle" />

</LinearLayout>
